<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Start</th>
	<th>TZ<th>
    <th>Stop</th>
    <th>Notes</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.start %></td>
	<td><%= task.start_before_type_cast %></td>
    <td><%=h task.stop %></td>
    <td><%=h task.notes %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>